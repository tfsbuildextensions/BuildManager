<Window x:Class="TfsBuildManager.Views.ProcessParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Process Parameter" Height="224" Width="503" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Graphics/AppIcon.ico">

    <Grid>
        <Label Content="Parameter Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Required Value" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox Height="23" Margin="114,13,10,0" TextWrapping="Wrap" Text="" Name="TextBoxParameterName" VerticalAlignment="Top"/>
        <TextBox Height="89" Margin="114,72,0,0" TextWrapping="Wrap" Text="" Name="TextBoxParameterValue" VerticalAlignment="Top" HorizontalAlignment="Left" AcceptsReturn="True" Width="373"/>
        <Button Content="Ok" Name="ButtonOk" Margin="0,0,10,9" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="ButtonOk_OnClick"/>
        <RadioButton Content="Boolean" Name="RadioButtonBoolean" HorizontalAlignment="Left" Margin="114,46,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="String or json" Name="RadioButtonString" HorizontalAlignment="Left" Margin="192,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Parameter Type" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
